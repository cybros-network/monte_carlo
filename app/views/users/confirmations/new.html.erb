<div class="row justify-content-center mb-3">
  <div class="col-md-8 col-lg-6">
    <div class="mx-4 p-4">
      <%= form_with(model: resource, as: resource_name, url: user_confirmation_path, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), id: "user_email", autofocus: true, required: "required", class: "form-control", class_for_error: "is-invalid" %>
          <%= f.error_message :email, class: "invalid-feedback" %>
        </div>

        <div class="d-grid gap-2 mb-3">
          <%= f.submit t(".submit"), class: "btn btn-primary" %>
        </div>

        <%- if devise_mapping.database_authenticatable? %>
          <div class="form-text text-center">
            <%= link_to t(".back_to_sign_in_instructions"), new_user_session_path %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
